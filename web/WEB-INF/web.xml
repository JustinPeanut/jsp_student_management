<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
        <servlet>
            <servlet-name>controller</servlet-name>
            <servlet-class>com.peanut.service.LoginController</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>controller</servlet-name>
            <url-pattern>/login</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>GetCourseController</servlet-name>
            <servlet-class>com.peanut.service.GetCourseController</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>GetCourseController</servlet-name>
            <url-pattern>/courseCenter</url-pattern>
        </servlet-mapping>
    
        <servlet>
            <servlet-name>removeCourse</servlet-name>
            <servlet-class>com.peanut.service.RemoveCourse</servlet-class>
        </servlet>
    
        <servlet-mapping>
            <servlet-name>removeCourse</servlet-name>
            <url-pattern>/removeCourse</url-pattern>
        </servlet-mapping>
        
        <servlet>
            <servlet-name>courseCenter</servlet-name>
            <servlet-class>com.peanut.service.ToCourseCenter</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>courseCenter</servlet-name>
            <url-pattern>/to/course/center</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>returnHome</servlet-name>
            <servlet-class>com.peanut.service.ReturnHome</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>returnHome</servlet-name>
            <url-pattern>/home</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>OwnCourse</servlet-name>
            <servlet-class>com.peanut.service.ToOwnCourse</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>OwnCourse</servlet-name>
            <url-pattern>/ownCourse</url-pattern>
        </servlet-mapping>

        <servlet>
            <servlet-name>addCourse</servlet-name>
            <servlet-class>com.peanut.service.AddCourse</servlet-class>
        </servlet>

        <servlet-mapping>
            <servlet-name>addCourse</servlet-name>
            <url-pattern>/addCourse</url-pattern>
        </servlet-mapping>
</web-app>